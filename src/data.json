{
    "languages" : {
        "cpp" : {
            "name": "C++", 
            "src_extension": "cpp", 
            "hdr_extension": "hpp",
            "compiler": "g++",
            "standards": ["11", "14", "17", "20"],
            "default_std": "20"
        },
        "c" : {
            "name": "C",
            "src_extension": "c",
            "hdr_extension": "h",
            "compiler": "gcc",
            "standards": ["89", "90", "95", "99", "11", "17"],
            "default_std": "17"
        }
    },
    "setup_questions": [
        {
            "name": "target_languages",
            "description": "Choose which languages you want to use (deselect with <space>)",
            "required": true,
            "min_amount": 1,
            "options": [ "C++", "C" ],
            "default": "C++",
            "type": "checkbox"
        },
        {
            "name": "build_dir",
            "description": "Enter the build-dir name",
            "required": true,
            "default": "build",
            "type": "text"
        },
        {
            "name": "src_dir",
            "description": "Enter the src-dir name",
            "required": true,
            "default": "src",
            "type": "text"
        },
        {
            "name": "log_dir",
            "description": "Enter the log-dir name",
            "required": true,
            "default": "log",
            "type": "text"
        }
    ],
    "conditional_questions": [
        {
            "name": "cpp_std",
            "description": "Choose which C++ standard you want to use",
            "required": true,
            "default": "20",
            "options": ["11", "14", "17", "20"],
            "type": "list",
            "condition": "use_cpp"
        },
        {
            "name": "c_std",
            "description": "Choose which C standard you want to use",
            "required": true,
            "default": "17",
            "options": ["89", "90", "95", "99", "11", "17"],
            "type": "list",
            "condition": "use_c"
        }
    ]
}
