{
    "about": {
        "name": "Gwent - A card game from The Witcher",
        "description": "A simple card-game from the The Witcher series, where you battle your opponent with cards",
        "project": "gwent-card-game",
        "authors": [
            {
                "name": "Moritz",
                "email": "moritz@server.com"
            },
            {
                "name": "Peter",
                "email": "peter@server.at"
            }
        ]
    },
    "environment": {
        "root-dir": "/home/moritz/Projects/card-game/",
        "compiler": {
            "name": "GCC",
            "command": "g++",
            "version": "11.2.0",
            "global-flags": ["std=c++20", "Wall", "pedantic"]
        },
        "directories": {
            "source": "src",
            "build": "build"
        },
        "libraries": {
            "internal": [
                {
                    "name": "card",
                    "file": "card.hpp",
                    "description": "provides the base-class for all card-types in the game"
                }
            ],
            "external": [],
            "stl": [
                {
                    "name": "iostream",
                    "description": "allows for interaction with stdin / stdout"
                }
            ]
        },
        "compile-types": {
            "object": {
                "flags": ["c"]
            }
        },
        "executable": {
            "name": "gwent",
            "main-file": "main.cpp"
        },
        "compile-units": [
            {
                "name": "card",
                "file": "card/card.cpp",
                "type": "object"
            },
            {
                "name": "main", 
                "file": "main.cpp",
                "type": "object"
            }
        ],
        "objects": []
    }
}